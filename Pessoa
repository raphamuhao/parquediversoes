  /*metodo de cadastrar pessoa*/
    
  public static void cadastrarPessoa(){
   int numerodecadastro = numerolinhas()
   Console.WriteLine("numero do cadastro:{0}",numerodecadastro +1); 
   Console.WriteLine( "Por Favor passe as seguintes informações para criar seu cadastro seguindo o exemplo: Nome/Cpf/Idade/Altura");
   Console.WriteLine("Sem espaço se o nome for composto, letras maiúsculas nas inicias e e sem caracteres especiais tipo !,* e Ç...");
    
   Console.WriteLine("Exemplo: eltonJohn/13600761900/54/168");
   string dados = Console.ReadLine();
    
   FileStream arq = new FileStream("Pessoa.text",FileMode.Append,FileAccess.Write);// comande de escrever 
   StreamWriter informaçoesbasicas= new StreamWriter(arq, Encoding.UTF7);    
   string infobasic = dados;
   informaçoesbasicas.WriteLine(infobasic);
   informaçoesbasicas.Close();
   arq.Close(); 
   Console.WriteLine ( " Dados cadastrados. ");
   System.Threading.Thread.Sleep(TimeSpan.FromSeconds(3));
  }
  
